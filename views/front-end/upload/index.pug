extends ../layouts/main
block header_css
    link(href='/backend/css/bootstrap.min.css', rel='stylesheet', type='text/css')

    <link href="/backend/css/pages/form2.css" rel="stylesheet" />
    <link href="/backend/css/pages/form3.css" rel="stylesheet" />

    <link href="/backend/vendors/validation/css/bootstrapValidator.min.css" rel="stylesheet" />
    <link href="/backend/vendors/summernote/dist/summernote.css" rel="stylesheet"  type="text/css"/>
    <link href="/backend/vendors/summernote/dist/summernote-bs3.css" rel="stylesheet" type="text/css">
    <link href="/backend/vendors/select2/select2.min.css" rel="stylesheet" type="text/css">
    <link href="/backend/css/pages/editor.css" rel="stylesheet" type="text/css"/>

block content
    .container.marketing
        // Three columns of text below the carousel
        .row
            .content
                form#create-post.form-horizontal(action = "/admin/posts/create", method = "POST")
                    .form-group
                        label.col-md-3.control-label.hidden-xs Tiêu đề bài viết
                        .col-md-8
                            input.form-control(type='text', name='title', placeholder='Tiêu đề bài viết')

                    .form-group
                        label.col-md-3.control-label.hidden-xs Tên người mất đồ
                        .col-md-8
                            input.form-control(type='text', name='fullName', placeholder='Tên người mất đồ')

                    .form-group
                        label.col-md-3.control-label.hidden-xs Số điện thoại
                        .col-md-3
                            input.form-control(type='text', name='numberPhone', placeholder='Số điện thoại')
                        label.col-md-1.control-label.hidden-xs Email
                        .col-md-4
                            input.form-control(type='email', name='email', placeholder='Email')

                    .form-group
                        label.col-md-3.control-label.hidden-xs Địa điểm rơi/nhặt được
                        .col-md-8

                    .form-group
                        label.col-md-3.control-label.hidden-xs Danh mục tin
                        .col-md-8
                            select.form-control.select2(name='categoryId')

                    .form-group
                        label.col-md-3.control-label.hidden-xs.text-right Nội dung bài viết
                        .col-md-8
                            textarea.form-control#summernote(name='content', placeholder='Nội dung bài viết')
                    .form-group
                        label.col-md-3.control-label.hidden-xs.text-right Trạng thái
                        .col-md-8


                    .clearfix

                    .form-group
                        .col-md-offset-3.col-md-8
                            button.btn.btn-primary(type='submit') Tạo mới
block footer_js
    script.
        $('.select2').select2();
