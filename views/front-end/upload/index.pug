extends ../layouts/main
block header_css
    link(href="/front-end/vendor/select2/select2.min.css", type="text/css", rel="stylesheet")
    style.
        .form-control {
            border-radius: 0;
            padding: .45rem .65rem;
        }
        .select2-container--default .select2-selection--single {
            border : 1px solid rgba(0,0,0,.15)
        }

block content
    .container.marketing
        .row(style="margin-top:60px")
            <div class="container">
            <form>
            <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Địa điểm</label>
            <div class="col-sm-10">
            <select name="position" class="form-control select2">
            each province in provinces
                option(value=province)= province
            </select>
            </div>
            </div>
            <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Ngày rơi</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword3" placeholder="Ngày rơi / nhặt được">
            </div>
            </div>
            <fieldset class="form-group row">
            <legend class="col-form-legend col-sm-2">Radios</legend>
            <div class="col-sm-10">
            <div class="form-check">
            <label class="form-check-label">
            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
            Option one is this and that&mdash;be sure to include why it's great
            </label>
            </div>
            <div class="form-check">
            <label class="form-check-label">
            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
            Option two can be something else and selecting it will deselect option one
            </label>
            </div>
            <div class="form-check disabled">
            <label class="form-check-label">
            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3" disabled>
            Option three is disabled
            </label>
            </div>
            </div>
            </fieldset>
            <div class="form-group row">
            <label class="col-sm-2">Checkbox</label>
            <div class="col-sm-10">
            <div class="form-check">
            <label class="form-check-label">
            <input class="form-check-input" type="checkbox"> Check me out
            </label>
            </div>
            </div>
            </div>
            <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
            </div>
            </form>
            </div>

block footer_js
    script(src="/front-end/vendor/select2/select2.min.js", type="text/javascript")
    script.
        $('.select2').select2();
