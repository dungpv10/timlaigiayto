doctype html
html
    head
        title Tìm lại giấy tờ | Đăng nhập
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        // global level css
        link(href='/backend/css/bootstrap.min.css', rel='stylesheet')
        // end of global level css
        // page level css
        link(href='/backend/css/pages/login2.css', rel='stylesheet')
        link(href='/backend/vendors/iCheck/skins/minimal/blue.css', rel='stylesheet')
        // styles of the page ends
    body
        .container
            .row.vertical-offset-100
                .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3.col-md-5.col-md-offset-4.col-lg-4.col-lg-offset-4
                    .panel.panel-default
                        .panel-heading
                            h3.panel-title.text-center Sign In
                        .panel-body
                            form(accept-charset='UTF-8', role='form', method="post", action="/admin/login")
                                fieldset
                                    .form-group.input-group
                                        .input-group-addon
                                            i.livicon(data-name='at', data-size='18', data-c='#484848', data-hc='#484848', data-loop='true')
                                        input.form-control(placeholder='E-mail', name='email', type='text', required='')
                                    .form-group.input-group
                                        .input-group-addon
                                            i.livicon(data-name='key', data-size='18', data-c='#484848', data-hc='#484848', data-loop='true')
                                        input.form-control(placeholder='Password', name='password', type='password', value='', required='')
                                    //.form-group
                                    //    label
                                    //        input.minimal-blue(name='remember', type='checkbox', value='Remember Me', required='')
                                    //        |                                         Remember Me
                                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
        // global js
        script(src='/backend/js/jquery-1.11.3.min.js', type='text/javascript')
        script(src='/backend/js/bootstrap.min.js', type='text/javascript')
        // livicons
        script(src='/backend/vendors/livicons/minified/raphael-min.js', type='text/javascript')
        script(src='/backend/vendors/livicons/minified/livicons-1.4.min.js', type='text/javascript')
        // end of global js
        // begining of page level js
        script(src='/backend/js/TweenLite.min.js')
        script(src='/backend/vendors/iCheck/icheck.js', type='text/javascript')
        script(src='/backend/js/pages/login2.js', type='text/javascript')
        // end of page level js
