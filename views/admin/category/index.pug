extends ../layouts/table


block content
    .col-md-12
        // BEGIN SAMPLE TABLE PORTLET
        .portlet.box.primary
            .portlet-title
                .caption
                    i.livicon(data-name='camera-alt', data-size='16', data-loop='true', data-c='#fff', data-hc='white')
                    |                                     Danh sách danh mục
            .portlet-body
                .ds
                    table.table.table-hover#list
                        thead
                            tr
                                th #
                                th Tên
                                th Slug
                                th Thao tác
                        tbody

                            - var link = '/admin/categories/'
                            each category, index in categories
                                tr
                                    td= index + 1
                                    td= category.name
                                    td= category.slug
                                    td
                                        .col-md-3
                                            a.btn.btn-sm.btn-success(href=link + category._id) Chỉnh sửa
                                        .col-md-3
                                            form(action=link, method = 'POST')
                                                input(type='hidden', value=category._id, name='id')
                                                button.btn.btn-sm.btn-warning(type="submit") Xóa