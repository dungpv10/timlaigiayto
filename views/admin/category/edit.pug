extends ../layouts/form


block sub_content
    .panel.panel-success
        .panel-heading
            h3.panel-title
                i.livicon(data-name='pacman', data-size='16', data-loop='true', data-c='#fff', data-hc='white')
                |                                 Tạo mới danh mục
            span.pull-right.clickable
                i.glyphicon.glyphicon-chevron-up
        .panel-body
            form#create-category.form-horizontal(action = "/admin/categories/update", method = "POST")
                .form-group
                    label.col-md-3.control-label.hidden-xs Tên danh mục
                    .col-md-8
                        input.form-control(type='text', name='name', placeholder='Tên danh mục', value=category.name)
                .form-group
                    label.col-md-3.control-label.hidden-xs Tên ngắn
                    .col-md-8
                        input.form-control(type='text', name='slug', placeholder='Tên ngắn', value=category.slug)
                        input(type='hidden', name='id', value=category._id)
                .form-group
                    label.col-md-3.control-label.hidden-xs Mô tả
                    .col-md-8
                        textarea.form-control#summernote(name='description', placeholder='Mô tả danh mục')= category.description

                .form-group
                    .col-md-offset-3.col-md-8
                        button.btn.btn-primary(type='submit') Cập nhật