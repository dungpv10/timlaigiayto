.row
    .col-lg-6.col-md-6.col-sm-6
        .panel.panel-primary.panel-border
            .panel-heading.border-light
                h4.panel-title
                    i.livicon(data-name='medal', data-size='20', data-loop='true', data-c='#00bc8c', data-hc='#00bc8c')
                    |                                     Tin mới trong ngày

            .panel-body

                table.table.table-hover#list-post
                    thead
                        tr
                            th(class="text-left") #
                            th(class="text-left") Tiêu đề
                            th(class="text-left") Danh mục
                    tbody
                        each post, index in listData.posts
                            tr
                                td= index + 1
                                td= post.title
                                td= post.categoryId.name

    // To do list
    .col-lg-6.col-md-6.col-sm-6
        .panel.panel-primary.todolist
            .panel-heading.border-light
                h4.panel-title
                    i.livicon(data-name='medal', data-size='20', data-color='#F89A14', data-hc='#F89A14', data-l='true')
                    |                                     Email mới
            .panel-body.nopadmar
                table.table.table-hover#list-emails
                    thead
                        tr
                            th(class="text-left") #
                            th(class="text-left") Email
                    tbody
                        each email, index in listData.emails
                            tr
                                td= index + 1
                                td= email.email
