doctype html
html
    head
        meta(charset='UTF-8')
        title Simple Tables | Josh Admin Template
        meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
        // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
        // WARNING: Respond.js doesn't work if you view the page via file://
        //if lt IE 9
          script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
          script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
        // global css
        link(href='/backend/css/bootstrap.min.css', rel='stylesheet', type='text/css')
        link(href='/backend/vendors/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
        link#colorscheme(href='/backend/css/styles/black.css', rel='stylesheet', type='text/css')
        link(href='/backend/css/panel.css', rel='stylesheet', type='text/css')
        link(href='/backend/css/metisMenu.css', rel='stylesheet', type='text/css')
        // end of global css
        // page level css
        block header_css
        // end of page level css
        |<style>.form-control {border-radius : 0}</style>
    body.skin-josh
        include ../includes/header
        .wrapper.row-offcanvas.row-offcanvas-left
            // Left side column. contains the logo and sidebar
            aside.left-side.sidebar-offcanvas
                include ../includes/sidebar
            // Right side column. Contains the navbar and content of the page
            aside.right-side
                // Content Header (Page header)
                section.content-header
                    // section starts
                    h1(style = "text-transform : uppercase") Tìm lại giấy tờ
                    ol.breadcrumb
                        li
                            a(href='index.html')
                                i.livicon(data-name='home', data-size='14', data-loop='true')
                                |                             Dashboard
                        li
                            a(href='#') DataTables
                        li.active Simple Tables
                // section ends
                section.content
                    .row
                        block content

                // content
            // right-side
        // ./wrapper
        a#back-to-top.btn.btn-primary.btn-lg.back-to-top(href='#', role='button', title='Return to top', data-toggle='tooltip', data-placement='left')
            i.livicon(data-name='plane-up', data-size='18', data-loop='true', data-c='#fff', data-hc='white')
        // global js
        script(src='/backend/js/jquery-1.11.3.min.js', type='text/javascript')
        script(src='/backend/js/bootstrap.min.js', type='text/javascript')
        // livicons
        script(src='/backend/vendors/livicons/minified/raphael-min.js', type='text/javascript')
        script(src='/backend/vendors/livicons/minified/livicons-1.4.min.js', type='text/javascript')
        script(src='/backend/js/josh.js', type='text/javascript')
        script(src='/backend/js/metisMenu.js', type='text/javascript')
        script(src='/backend/vendors/holder/holder.js', type='text/javascript')
        // end of global js
        block footer_js