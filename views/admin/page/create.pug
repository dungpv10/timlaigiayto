extends ../layouts/form

block sub_header_css

block sub_content
    .panel.panel-success
        .panel-heading
            h3.panel-title
                i.livicon(data-name='pacman', data-size='16', data-loop='true', data-c='#fff', data-hc='white')
                |                                 Tạo mới trang con
            span.pull-right.clickable
                i.glyphicon.glyphicon-chevron-up
        .panel-body
            form#create-page.form-horizontal(action = "/admin/pages/create", method = "POST")
                .form-group
                    label.col-md-3.control-label.hidden-xs Tiêu đề trang
                    .col-md-8
                        input.form-control(type='text', name='title', placeholder='Tiêu đề trang')

                .form-group
                    label.col-md-3.control-label.hidden-xs.text-right Nội dung trang con
                    .col-md-8
                        textarea.form-control#summernote(name='content', placeholder='Nội dung trang con')

                .clearfix

                .form-group
                    .col-md-offset-3.col-md-8
                        button.btn.btn-primary(type='submit') Tạo mới

block sub_footer_js
