extends ../layouts/table

block content
    .col-md-12
        // BEGIN SAMPLE TABLE PORTLET
        .portlet.box.primary
            .portlet-title
                .caption
                    i.livicon(data-name='camera-alt', data-size='16', data-loop='true', data-c='#fff', data-hc='white')
                    |                                     Danh sách tin tức
            .portlet-body
                .ds
                    table.table.table-hover#list
                        thead
                            tr
                                th Tiêu đề
                                th Xem trang
                                th Thao tác
                        tbody

                            - var link = '/admin/pages/'
                            each page, index in pages
                                tr
                                    td= page.title
                                    td
                                        span.label.label-sm.label-success= domain + '/' + page.slug
                                    td
                                        a.btn.btn-sm.btn-success(href=link + page._id, style="float : left")
                                            i.livicon(data-name="external-link" data-size="15" data-c="#fff" data-hc="#fff" data-loop="true")
                                        form(action=link + page.id, method = 'POST', style="float:left")
                                            input(type='hidden', value=page._id, name='id')
                                            button.btn.btn-sm.btn-warning(type="submit")
                                                i.livicon(data-name="trash" data-size="15" data-c="#fff" data-hc="#fff" data-loop="true")
