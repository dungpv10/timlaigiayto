extends ../layouts/form

block sub_content
    .panel.panel-success
        .panel-heading
            h3.panel-title
                i.livicon(data-name='pacman', data-size='16', data-loop='true', data-c='#fff', data-hc='white')
                |                                 Tạo mới quản trị viên
            span.pull-right.clickable
                i.glyphicon.glyphicon-chevron-up
        .panel-body
            form#create-role.form-horizontal(action = "/admin/roles/create", method = "POST")
                .form-group
                    label.col-md-3.control-label.hidden-xs Tên quyền
                    .col-md-8
                        input.form-control(type='text', name='name', placeholder='Nhập tên quyền')

                .form-group
                    .col-md-offset-3.col-md-8
                        button.btn.btn-primary(type='submit') Tạo mới
